<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expense_edit_Sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/expense_sheet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_expense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/segoe_ui_bold"
        android:paddingTop="40dp"
        android:gravity="center"
        android:text="@string/edit_expense"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/marginsLR"
        android:layout_marginLeft="@dimen/marginsLR"
        android:hint="@string/description"
        android:textColorHint="#C0C0C0"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/marginsLR"
        android:layout_marginLeft="@dimen/marginsLR"
        android:hint="@string/amount"
        android:textColorHint="#C0C0C0"
        android:fontFamily="@font/segoe_ui"
        android:ems="10"
        android:inputType="numberDecimal"/>

    <Spinner
        android:id="@+id/categorySelect"
        style="@style/categorySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:prompt="@string/select_category"
        android:layout_marginLeft="@dimen/marginsLR"
        android:layout_marginRight="@dimen/marginsLR"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/marginsLR"
        android:layout_marginLeft="@dimen/marginsLR"
        android:background="@drawable/receipt"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="15dp">


        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:background="@drawable/delete"
            android:layout_marginStart="80dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:layout_weight="1"
            android:background="@drawable/save_edit"
            android:layout_marginEnd="80dp" />



    </LinearLayout>



</LinearLayout>

